#include <stdio.h>
 int main()
{   
    int num, sum = 0, n;
    float avg;
     
    printf("Please Enter term of n number:-");
    scanf("%d", &n);
    for(int i = 1; i <= n; i++)
    {
        printf("Number %d = ", i);
        scanf("%d", &num);
        sum = sum + num;
    }
 
    avg = sum / n;
 
    printf("\nThe Sum of n Numbers     = %d", sum); 
    printf("\nThe Average of n Numbers = %.2f\n", avg);
}

OUTPUT:-
Please Enter term of n number:-5
Number 1 = 1
Number 2 = 2
Number 3 = 3
Number 4 = 4
Number 5 = 5
The Sum of n Numbers     = 15
The Average of n Numbers = 3.00
